{
    "name" : "flint/brick",
    "description" : "Binds Symfony and Flint components together with Silex",
    "license" : "MIT",

    "autoload" : {
        "psr-4" : { "Brick\\" : "src" }
    },

    "autoload-dev" : {
        "psr-4" : { "Brick\\Tests\\" : "tests" }
    },

    "require" : {
        "php"            : ">=5.4.0",
        "silex/api"      : "~2.0@dev",
        "pimple/pimple"  : "~3.0",
        "symfony/config" : "~2.5",
    },

    "require-dev" : {
        "silex/silex"          : "2.0.x-dev",
        "flint/tacker"         : "~1.0",
        "twig/twig"            : "~1.14",
        "doctrine/annotations" : "~1.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
