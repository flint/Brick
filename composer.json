{
    "name" : "flint/brick",
    "description" : "Binds Symfony and Flint components together with Silex",
    "license" : "MIT",

    "autoload" : {
        "psr-0" : { "Brick\\" : "src" }
    },

    "minimum-stability" : "dev",

    "require" : {
        "php"       : ">=5.3.3",
        "silex/api" : "dev-2.0-experimental"
    },

    "require-dev" : {
        "flint/tacker"         : "~1.0",
        "silex/silex"          : "dev-2.0-experimental",
        "twig/twig"            : "~1.14",
        "phpspec/phpspec"      : "~2.0",
        "doctrine/annotations" : "~1.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
